<% layout('layouts/boilerplate') -%>
    <h1>ALL ROOMS:</h1>
    <% for(let room of rooms){ %>
        <div class="card-group">
            <div class="card">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" src="<%=room.roomImage[0].url%>" alt="">
                        <div class="card-body">
                            <h3 class="card-text">
                                <small class="text-muted"><%= room.ownerAddress %> </small>
                            </h3>
                            <a class="btn btn-primary" href="/rooms/<%=room._id%>">SHOW DETAIL</a>
                        </div>
                    </div>
                </div>
            <% } %> 
            </div>
        </div>
  
 