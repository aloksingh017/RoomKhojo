<% layout('layouts/boilerplate') -%>
    <div class="row">
        <div class="col-md-6 offset-3">
            <h1 class="text-center">Add New Room</h1>
         <form action="/rooms" method="POST" novalidate class="validated-form" enctype="multipart/form-data" >
        <div class="mb-2"> 
            <label class="form-label" for="ownerName">ownerName:</label>
            <input class="form-control" class="form-control" type="text" id="ownerName" name="room[ownerName]"   placeholder="owner Name" required >
            <div class="valid-feedback">Looks Good</div>
        </div>
        <div class="mb-2"> 
            <label class="form-label" for="ownerAddress">ownerAddress:</label>
            <input class="form-control" type="text" id="ownerAddress" name="room[ownerAddress]"   placeholder="Address" required >
            <div class="valid-feedback">Looks Good</div>
        </div>
        <div class="mb-2"> 
            <label class="form-label" for="ownerPhone">ownerPhone:</label>
            <input class="form-control" type="text" id="ownerPhone" name="room[ownerPhone]"   placeholder="owner Phone" required >
            <div class="valid-feedback">Looks Good</div>
        </div>

        <div class="mb-2">
            <label class="form-label" for="formFile">Room Image(s):</label>
            <input type="file" class="form-control" id="formFile" name="roomImage" multiple>
          </div>
        <!-- <input type="file" name="roomImage" multiple> -->


        <div class="mb-2"> 
            <label class="form-label" for="ownerImage">ownerImage</label>
            <input class="form-control" type="text" id="ownerImage" name="room[ownerImage]"   placeholder="owner Image" required >
            <div class="valid-feedback">Looks Good</div>
        </div>
        <!-- <div class="mb-2"> 
            <label class="form-label" for="roomImage">roomImage:</label>
            <input class="form-control" type="text" id="roomImage" name="room[roomImage]"   placeholder="room Image"  >
            <div class="valid-feedback">Looks Good</div>
        </div> -->
        <div class="mb-2"> 
            <label class="form-label" for="price">price:</label>
            <input class="form-control" type="text" id="price" name="room[price]"   placeholder="price" required >
            <div class="valid-feedback">Looks Good</div>
        </div>
        <div class="mb-2"> 
            <label class="form-label" for="seater">seater:</label>
            <input class="form-control" type="text" id="seater" name="room[seater]"   placeholder="seater" required >
            <div class="valid-feedback">Looks Good</div>
        </div>
        <button class="btn btn-success mt-2">SUBMIT</button>
    </form>


        </div>
    </div>

  
